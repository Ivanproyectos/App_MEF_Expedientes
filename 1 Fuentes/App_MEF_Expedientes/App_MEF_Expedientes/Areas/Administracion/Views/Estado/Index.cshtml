
@{
    ViewBag.Title = "Index";
}
<link href="~/assets/Switch_Toggle.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/Js/Remove.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Js/Administracion/Estado.js")" type="text/javascript"></script>


<script type="text/javascript">
    $(document).ready(function () {
        //Remove_RemoverClases("liEstado");
        //$('#Grilla_Load').show();
        Remove_RemoverClases("liEstado");
        Estado_ConfigurarGrilla();
    });

    $("#btnLimpiarEstado").click(function (e) {
        LimpiarEstado();
    });

    $("#btnNuevoEstado").click(function (e) {
        Estado_Nuevo();
    });

    jQuery('#btnBuscarEstado').click(function (e) {
        Estado_ConfigurarGrilla();
    });




</script>



<div class="modal fade" id="myModalNuevo" tabindex="" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<div id="Grilla_Load" hidden="hidden" class="blockUI blockMsg blockPage " style="z-index: 1070; position: fixed; padding: 0px; margin: 0px; width: 30%; top: 40%; left: 35%; text-align: center; color: rgb(0, 0, 0); border: 3px solid rgb(170, 170, 170); background-color: rgb(255, 255, 255); cursor: wait;">
    <h5>
        <img style="height: 20px" src="@Url.Content("~/assets/images/loading.gif")">
        Cargando Regitros...
    </h5>
</div>


<div class="tab-content">

    <div id="panel_tab_1" class="tab-pane active">
        <div class="col-sm-12 inline-container-Group">
            <p class="modal-title" style="color: #999; font-size: 15px; margin-bottom: 5px; margin-top: -5px">Criterios de búsqueda: </p>
            <fieldset style="width: 100%;">
                <div class="row">
                    <div class="col-sm-1">
                        <label class="col-sm-15 control-label" for="form-field-1" style="width: 100%; margin-top: 5px; text-align: right;">Descripción Corta:</label>
                    </div>
                    <div class="col-sm-2">
                        <input type="text" id="txt_DescripcionCorta" name="txt_DescripcionCorta" maxlength="30" class="form-control" style="width: 100%" />
                    </div>
                    <div class="col-sm-1">
                        <label class="col-sm-15 control-label" for="form-field-1" style="width: 100%; margin-top: 5px; text-align: right;">Descripción Larga:</label>
                    </div>
                    <div class="col-sm-2">
                        <input type="text" id="txt_DescripcionLarga" name="txt_DescripcionLarga" maxlength="30" class="form-control" style="width: 100%" />
                    </div>

                    <div class="col-sm-1">
                        <label class="col-sm-15 control-label" for="form-field-1" style="width: 100%; margin-top: 5px; text-align: right;">Estado:</label>
                    </div>
                    <div class="col-sm-2">
                        <select id="CBOESTADO" class="form-control">
                            <option value="">--Seleccione--</option>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>

                    <div class="col-sm-3">
                        <button id="btnBuscarEstado" class="btn btn-red" type="button"><i class="clip-search"></i>&nbsp  Buscar</button>
                        <button id="btnLimpiarEstado" class="btn btn-grey" type="button"><i class="clip-undo" />&nbsp Limpiar</button>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="row">
            <div class="col-sm-7" style="margin-top: 10px">
                <button id="btnNuevoEstado" class="btn btn-red" type="button" data-toggle="modal" data-target="#myModalNuevo"><i class="fa fa-plus"></i>&nbsp  Nuevo Estado </button>
            </div>
            <div class="col-sm-12" style="margin-top: 10px">
                <div class="jqGrid">
                    <table id="Estado_grilla">
                    </table>
                    <div id="Estado_barra"></div>
                </div>
            </div>
        </div>
    </div>

</div>


